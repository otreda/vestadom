  }
  .select-station {
    width: 20%;
    margin-left: -1px;
  }
  .input-search {
    width: 40%;
    margin-left: -1px;
  }
  .select-room {
    margin-right: 5px;
  }
  .input-group-area {
    margin-right: 5px;
  }
  .input-price-from {
    width: 100px;
  }
  .input-price-to {
    width: 100px;
  }
  .wrapper-close-form {
    display: none;
  }
  .show-search-btn.active {
    display: none;
  }
  .form {
    display: block;
  }
}

@media only screen and (min-width: 1400px) and (max-width: 2560px) {
  .wrapper-close-form {
    display: none;
  }
  .show-search-btn.active {
    display: none;
  }
  .form {
    display: block;
  }
}
